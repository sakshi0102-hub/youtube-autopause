{
    "manifest_version": 3,
    "name": "YouTube Autopause",
    "version": "1.0",
    "description": "Automatically pauses YouTube videos when switching tabs.",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["autopause.js"]
      }
    ],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  